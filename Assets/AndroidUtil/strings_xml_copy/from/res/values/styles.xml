<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowBackground">@color/background_window</item>
    <item name="android:actionBarSize">56dp</item>
    <item name="colorAccent">#f050d3</item>
    <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
  </style>

  <style name="ActivityAnimation" parent="@android:style/Animation.Activity">
    <item name="android:activityOpenEnterAnimation">@anim/activity_enter</item>
    <item name="android:activityOpenExitAnimation">@null</item>
    <item name="android:activityCloseEnterAnimation">@null</item>
    <item name="android:activityCloseExitAnimation">@anim/activity_exit</item>
  </style>

  <style name="DialogAnimation" parent="@android:style/Animation.Activity">
    <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
    <item name="android:windowExitAnimation">@anim/dialog_exit</item>
  </style>

  <style name="AppTheme.Seek" parent="AppTheme">
    <item name="colorAccent">@color/seek_active</item>
    <item name="colorControlNormal">@color/seek_normal</item>
  </style>

  <style name="AppTheme.Splash" parent="AppTheme">
    <item name="android:windowBackground">@drawable/bg_splash_window</item>
  </style>

  <style name="ActivityDialog" parent="AppTheme">
    <item name="android:windowBackground">@color/background_dialog</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowAnimationStyle">@style/ActivityDialogAnimation</item>
  </style>

  <style name="ActivityDialog.NoFlashlight" parent="AppTheme">
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowAnimationStyle">@style/ActivityDialogAnimation</item>
  </style>

  <style name="ActivityDialogAnimation">
    <item name="android:activityOpenEnterAnimation">@anim/dialog_enter</item>
    <item name="android:activityOpenExitAnimation">@null</item>
    <item name="android:activityCloseEnterAnimation">@null</item>
    <item name="android:activityCloseExitAnimation">@anim/dialog_exit</item>
  </style>

  <style name="SelfDialog" parent="android:style/Theme.Dialog">
    <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="ScreenLightDialog" parent="Theme.AppCompat.Light.Dialog">

  </style>

  <style name="CalibrationDialog" parent="ThemeOverlay.AppCompat.Dark">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowBackground">@color/calibration_window_background</item>
  </style>

  <style name="SettingDialog" parent="Theme.AppCompat.Light.Dialog">
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="PurchaseDialogButtonStyle">
    <item name="android:gravity">center</item>
    <item name="android:textSize">16dp</item>
    <item name="android:textColor">#ffffff</item>
    <item name="android:layout_width">216dp</item>
    <item name="android:layout_height">40dp</item>
  </style>

  <style name="PurchaseDialogIconStyle">
    <item name="android:layout_width">42dp</item>
    <item name="android:layout_height">42dp</item>
  </style>

  <style name="PurchaseDialogTextStyle">
    <item name="android:ellipsize">end</item>
    <item name="android:layout_width">160dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingLeft">8dp</item>
    <item name="android:paddingRight">8dp</item>
    <item name="android:gravity">center_vertical|left</item>
    <item name="android:textColor">#ffc8c8</item>
    <item name="android:textSize">14dp</item>
  </style>

  <style name="SettingPrimaryTitleStyle">
    <item name="android:singleLine">true</item>
    <item name="android:ellipsize">end</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">start|center_vertical</item>
    <item name="android:textColor">#FAFAFA</item>
    <item name="android:textSize">18dp</item>
    <item name="fontFamily">sans-serif</item>
  </style>

  <style name="SettingSecondaryTitleStyle">
    <item name="android:maxLines">2</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">start|center_vertical</item>
    <item name="android:textColor">#737680</item>
    <item name="android:textSize">14dp</item>
  </style>

  <style name="ToolbarTitleStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">#ffffff</item>
    <item name="android:textSize">20dp</item>
    <item name="fontFamily">sans-serif</item>
  </style>

  <style name="ToolbarIconStyle">
    <item name="android:scaleType">centerInside</item>
    <item name="android:src">@drawable/ic_back</item>
    <item name="android:background">@drawable/selector_back</item>
    <item name="android:layout_width">48dp</item>
    <item name="android:layout_height">48dp</item>
  </style>

  <style name="AboutItemStyle">
    <item name="android:gravity">center_vertical</item>
    <item name="android:background">@drawable/selector_item</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">48dp</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:textColor">#FAFAFA</item>
    <item name="android:textSize">18dp</item>
  </style>

  <style name="SettingItemStyle">
    <item name="android:background">@drawable/selector_item</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">68dp</item>
    <item name="android:paddingRight">16dp</item>
  </style>

  <style name="SettingHighlightTextStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">#f050d3</item>
    <item name="android:textSize">16dp</item>
  </style>

  <style name="SelectAutoCloseTimeDialogItem">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">44dp</item>
    <item name="android:paddingLeft">20dp</item>
    <item name="android:paddingRight">20dp</item>
    <item name="android:gravity">center_vertical</item>
  </style>

  <style name="SelectAutoCloseTimeDialogItemText">
    <item name="android:layout_marginLeft">20dp</item>
    <item name="android:layout_marginRight">20dp</item>
    <item name="android:textSize">15dp</item>
    <item name="android:textColor">#babdcc</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
  </style>

  <style name="SelectAutoCloseTimeDialogItemRadioButton">
    <item name="android:clickable">false</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="buttonTint">@color/radio_button</item>
  </style>

  <style name="DialogButtonStyle">
    <item name="android:background">@drawable/selector_item</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:minWidth">60dp</item>
    <item name="android:layout_height">36dp</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">#cf5cba</item>
    <item name="android:textSize">14dp</item>
  </style>

  <style name="SettingItemSplitLineStyle">
    <item name="android:layout_marginLeft">68dp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0.5dp</item>
    <item name="android:layout_gravity">end</item>
    <item name="android:background">#0d0d12</item>
  </style>

  <style name="CommonDialogNegativeButtonStyle">
    <item name="android:background">@drawable/selector_item</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">18dp</item>
    <item name="android:textColor">#737680</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">match_parent</item>
  </style>

  <style name="CommonDialogPositiveButtonStyle" parent="CommonDialogNegativeButtonStyle">
    <item name="android:textColor">#FAFAFA</item>
  </style>

  <style name="SwitchStyle">
    <item name="android:thumb">@drawable/selector_switch_thumb</item>
    <item name="track">@drawable/selector_switch_track</item>
  </style>

  <style name="AutoCloseDialogItemStyle">
    <item name="android:background">@drawable/selector_item</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="RatingBarStartStyle">
    <item name="android:src">@drawable/selector_rating_start</item>
    <item name="android:layout_width">40dp</item>
    <item name="android:layout_height">40dp</item>
  </style>
</resources>
