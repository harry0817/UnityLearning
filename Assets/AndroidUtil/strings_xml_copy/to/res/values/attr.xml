<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MaxHeightScrollView">
        <attr name="maxHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="KlondikeStatusTextView">
        <attr name="kstv_direction">
            <enum name="ltr" value="0"/>
            <enum name="rtl" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="SS_ShineImageView">
        <attr name="sb_shine" format="boolean"/>
        <attr name="sb_shine_drawable" format="reference"/>
        <attr name="sb_duration" format="integer"/>
        <attr name="sb_interval" format="integer"/>
        <attr name="sb_with_alpha" format="boolean"/>
        <attr name="sb_single_shot" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="WaveView">
        <attr name="wv_wave_drawable" format="reference"/>
    </declare-styleable>
</resources>